@page "/detailsPost/{postId:int}"
@inject IPostService IPostService
@inject NavigationManager Navigation

@if (post != null)
{
    <MudText Typo="Typo.h4" Color="Color.Primary">Post @post.Id Details:</MudText>

    <MudText Typo="Typo.h6" Color="Color.Secondary">Post Id:</MudText>
    <MudText Typo="Typo.h6">@post.Id</MudText>

    <MudText Typo="Typo.h6" Color="Color.Secondary">Post Title:</MudText>
    <MudText Typo="Typo.h6">@post.Title</MudText>

    <MudText Typo="Typo.h6" Color="Color.Secondary">Post Text:</MudText>
    <MudText Typo="Typo.h6">@post.Text</MudText>
}
else
{
    <MudText Typo="Typo.h6" Color="Color.Error">Post with given id doesn't exist</MudText>
}

@code {
    [Parameter]
    public int postId { get; set; }

    private Post post;

    protected override async Task OnInitializedAsync()
    {
        post = await IPostService.GetPostAsync(postId);
    }
}
